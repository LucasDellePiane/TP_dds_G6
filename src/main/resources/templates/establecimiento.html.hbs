{{#partial "principal" }}
    <div class="contenedor">
    <h1 class="tituloEstablecimiento">ESTABLECIMIENTOS</h1>
        <div class="cardsEstablecimiento">
            <ul>
                {{#establecimientos}}
                    <div class='cardEstablecimiento'>
                        <li class="containerEstablecimiento">
                            <div class="bodyCardEstablecimiento">
                                    <div class="titulo_establecimiento">
                                        <h1>{{nombre}}</h1>
                                    </div>
                                    <div class="tipo_establecimiento">
                                        <h1>{{tipoEstablecimiento}}</h1>
                                    </div>
                            </div>
                            <div class = botonServicio>
                                <a  class="boton_enviar" href="/establecimientos/{{id_establecimiento}}">
                                    Ver incidentes
                                </a>
                            </div>
                            <form class = botonServicio action="/incidentes/{{id_establecimiento}}/cerrar">
                                <input name="incidenteId" type="hidden" value={{id_establecimiento}} />
                                <button class="boton_enviar" type="submit"> Ver incidentes </button>
                            </form>
                        </li>
                    </div>
                {{/establecimientos}}
            </ul>
        </div>
    </div>

{{/partial}}

